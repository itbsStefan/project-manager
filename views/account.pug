extends layout

block styles
  link( rel="stylesheet", href="styles/account.bundle.css" )

block content
  div.group-wrapper.hidden
    div.title-wrapper
      h2 Change username
      svg.toogle( xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" )
        path( d="M10 0a10 10 0 1 1 0 20 10 10 0 0 1 0-20zM2 10a8 8 0 1 0 16 0 8 8 0 0 0-16 0zm10.54.7L9 14.25l-1.41-1.41L10.4 10 7.6 7.17 9 5.76 13.24 10l-.7.7z" )
    div.input-wrapper
      .input-group
        label( for="username" ) Username
        input( name="username" type="text" value=`${ newUsername || username }` )
      .input-group
        label( for="username_confirm" ) Confirm changes
        input( name="username_confirm" type="password" )
      button( name="username_button" ) Submit
  hr
  div.group-wrapper.hidden
    div.title-wrapper
      h2 Change password
      svg.toogle( xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" )
        path( d="M10 0a10 10 0 1 1 0 20 10 10 0 0 1 0-20zM2 10a8 8 0 1 0 16 0 8 8 0 0 0-16 0zm10.54.7L9 14.25l-1.41-1.41L10.4 10 7.6 7.17 9 5.76 13.24 10l-.7.7z" )
    div.input-wrapper
      .input-group
        label( for="password" ) Password
        input( name="password" type="password" )
      .input-group
        label( for="password_repeat" ) Repeat password
        input( name="password_repeat" type="password" )
      .input-group
        label( for="password_confirm" ) Confirm changes
        input( name="password_confirm" type="password" )
      button( name="password_button" ) Submit
  hr
  div.group-wrapper.hidden
    div.title-wrapper
      h2 Clear cards
      svg.toogle( xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" )
        path( d="M10 0a10 10 0 1 1 0 20 10 10 0 0 1 0-20zM2 10a8 8 0 1 0 16 0 8 8 0 0 0-16 0zm10.54.7L9 14.25l-1.41-1.41L10.4 10 7.6 7.17 9 5.76 13.24 10l-.7.7z" )  
    div.input-wrapper
      .input-group
        label( for="clear_confirm" ) Confirm removal
        input( name="clear_confirm" type="password" )
      button( name="clear_button" ) Clear
  hr
  div.group-wrapper.hidden
    div.title-wrapper
      h2 Remove account
      svg.toogle( xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" )
        path( d="M10 0a10 10 0 1 1 0 20 10 10 0 0 1 0-20zM2 10a8 8 0 1 0 16 0 8 8 0 0 0-16 0zm10.54.7L9 14.25l-1.41-1.41L10.4 10 7.6 7.17 9 5.76 13.24 10l-.7.7z" )
    div.input-wrapper
      .input-group
        label( for="remove_confirm" ) Confirm removal
        input( name="remove_confirm" type="password" )
      button( name="remove_button" ) Remove
  hr

block scripts
  script( src="scripts/account.bundle.js" )
