extends layout

include mixins/_cards

block styles
    link( rel="stylesheet", href="styles/main.css" )

block content
    h1 Project Manager
    .cards    
        each card in cards
            span.card( id=card._id )
                .front.inner
                    +frontCard( card )
                .back.inner
                    +backCard( card )
        span.card.addCardContainer
            img.addCard( src="img/add.png" )

block scripts
    script( src="scripts/main.js")
